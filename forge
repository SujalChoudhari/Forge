build:
  always: true
  run:
  - cargo build --release

  - win
  - copy .\\target\\release\\forge.exe .\\forge.exe
  - move  /Y .\\forge.exe forge_{version}_win.exe

  - mac 
  - cp ./target/release/forge ./forge
  - mv -f ./forge ./forge_{version}_mac

  - linux
  - cp ./target/release/forge ./forge
  - mv -f ./forge ./forge_{version}_linux
